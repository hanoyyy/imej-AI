<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/darkblue"
        android:padding="13dp">

        <LinearLayout
            android:id="@+id/segmentbacklayout"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:clickable="true">

            <ImageView
                android:layout_width="32.38dp"
                android:layout_height="32.38dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="12.31dp"
                android:src="@drawable/back2"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Segmentation"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/Thresholdingbtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/gray"
                android:padding="12dp"
                android:text="Thresholding"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/Kmeansbtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/gray"
                android:padding="12dp"
                android:text="K-means"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
